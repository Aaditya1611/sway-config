## Waybar specific configuration

exec_always waybar
# Make WiFi option popup float and center
for_window [app_id="floating_nmtui"] floating enable, resize set 900 700, move position center
# Make Bluetooth manager float and center
for_window [app_id="blueman-manager"] floating enable, resize set 900 700, move position center
# Make Volume Control float and center
for_window [app_id="pavucontrol"] floating enable, resize set 900 700, move position center
# Make htop float and center
for_window [app_id="floating_htop"] floating enable, resize set 900 700, move position center 


#sway font
font pango:Noto Sans 10

include /etc/sway/config.d/*
